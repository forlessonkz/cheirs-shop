<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs', {title: 'Products'}) %>
<body>
    <%- include('./partials/header.ejs', {title: 'Products'}) %>
    <div class="main base-width ">
        <div class="base-right-left-padding">
            <div class="page-header-container">
                <%- include('./partials/pageHeader.ejs', {title: 'Cheirs'}) %>
                <a href="/new">
                    <button class="add-new-product btn">
                        <img src="/images/icons/add-btn-icon.png" alt="">
                        Add new product
                    </button>
                </a>
            </div>
        </div>
        <div class="products-list">
            <% data.forEach(item => { %>
                <%- include('./partials/productItem.ejs', {
                    discount: item.discount, 
                    title: item.title, 
                    price: item.price, 
                    images: item.images,
                    _id: item._id,
                })%>
            <% }) %>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.7/axios.min.js" integrity="sha512-DdX/YwF5e41Ok+AI81HI8f5/5UsoxCVT9GKYZRIzpLxb8Twz4ZwPPX+jQMwMhNQ9b5+zDEefc+dcvQoPWGNZ3g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/actions.js" defer></script>
</body>
</html>